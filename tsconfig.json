{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist",
		"moduleResolution": "bundler",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"*": ["*", "*.js"]
		}
	},
	"include": ["src/**/*", "tests"],
	"exclude": ["node_modules","src/gen/**/*.ts","**/*/*.test.ts"]
}
